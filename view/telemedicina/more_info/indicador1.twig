{% extends "template/template.twig" %}
{% block style %}
    <style href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.css"></style>
{% endblock %}
{% block content %}
    {{ patologia |json_encode }}
    <div class="ed-item s-100 bg-white p-all-2rem">
        <div class="ed-container">
            <div class="ed-item s-100 l-70">
                <canvas id="line"></canvas>
            </div>
            <div class="ed-item s-100 l-30">
                <table>
                    <tbody>
                    {% set i = 0 %}
                    {% for a in months %}
                        <tr>
                            <td>
                                {{ a }}
                            </td>
                            <td>
                                {{ values[i] }}
                            </td>
                        </tr>
                        {% set i = i+1 %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <br><br><br>
        <div class="ed-container">
            <div class="ed-item s-100">
                <table>
                    <thead>
                        <tr>
                            <th>Codigo</th>
                            <th>Patologia</th>
                            <th>Cantidad</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for p in patologia %}
                            <tr>
                                <td>{{ p.COD }}</td>
                                <td>{{ p.patologia }}</td>
                                <td>{{ p.num_atenciones }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascript %}

<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>

    <script>

var ctx = document.getElementById('line').getContext('2d');

var myLineChart = new Chart(ctx, {
    type: 'line',
    data: {
        labels : {{ months | json_encode | raw }},
         datasets: [{
            label: 'NÃºmero de prestaciones a personas vulnerables',
            borderColor: 'rgb(255, 99, 132)',
            data: {{ values | json_encode | raw }}
        }]
    },

});
</script>
{% endblock %}